[core]
	editor = vim
[color]
    ui = true
[color "diff"]
    meat = yellow
    frag = magenta
    old = red
    new = green
    whitespace = red
[color "status"]
    added = green
    changed = yellow reverse
    untracked = red reverse
[color "branch"]
    current = yellow reverse
    local = green
    remote = cyan
[alias]
	lg = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=short
